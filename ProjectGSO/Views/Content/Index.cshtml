<div id="contact" class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading wow fadeIn" data-wow-duration="1s" data-wow-delay="0.5s">
                    <h6>Bize Ulaşın</h6>
                    <h4><em>Şimdi</em> Bizimle İletişime Geçin</h4>
                    <div class="line-dec"></div>
                </div>
            </div>
            <div class="col-lg-12 wow fadeInUp" data-wow-duration="0.5s" data-wow-delay="0.25s">
                <form id="contact" action="/Content/SendMessage" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="contact-dec">
                                <img src="/images/contact-dec.png" alt="">
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <div id="map">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d48953.49379936172!2d32.838297634777724!3d39.92811535153476!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34e6f51a3317b%3A0x7415e004939401c0!2sAnkara%20Kalesi!5e0!3m2!1str!2str!4v1738759776179!5m2!1str!2str" width="100%" height="636px" frameborder="0" style="border:0" allowfullscreen></iframe>
                                <!--
                                <iframe src="" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                --> 
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="fill-form">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="info-post">
                                            <div class="icon">
                                                <img src="/images/phone-icon.png" alt="">
                                                <a href="#">+90 544 371 52 59</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="info-post">
                                            <div class="icon">
                                                <img src="/images/email-icon.png" alt="">
                                                <a href="mailto:info@sirketismi.com">info&commat;sirketismi.com.tr</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="info-post">
                                            <div class="icon">
                                                <img src="/images/location-icon.png" alt="">
                                                <a href="#">Adresimiz</a>
                                            </div>
                                        </div>
                                    </div>
                                        <div class="col-lg-6">
                                            <fieldset>
                                                <input type="name" name="Name" id="Name" placeholder="İsiminiz" autocomplete="on" required>
                                            </fieldset>
                                            <fieldset>
                                                <input type="phone" name="Phone" id="Phone" placeholder="Telefon Numaranız" autocomplete="on" required>
                                            </fieldset>
                                            <fieldset>
                                                <input type="text" name="Email" id="Email" pattern="[^ ]*[^ ]*" placeholder="Email Adresiniz" required="">
                                            </fieldset>
                                            <fieldset>
                                                <input type="subject" name="Subject" id="Subject" placeholder="Konu" autocomplete="on">
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-6">
                                            <fieldset>
                                                <textarea name="Message" type="text" class="form-control" id="Message" placeholder="Mesajınız" required=""></textarea>
                                            </fieldset>
                                        </div>
                                        <div class="col-lg-12">
                                            <fieldset>
                                                <button type="submit" id="form-submit" class="main-button ">Mesajı Şimdi Gönder</button>
                                            </fieldset>
                                        </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>